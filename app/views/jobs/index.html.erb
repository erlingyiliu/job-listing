<table class="table table-boldered">
  <div class="dropdown clearfix pull-right">
    <button class="data-toggle" data-toggle="dropdown">
      排序
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to("按薪资下限排序", jobs_path(:order => "by_wage_lower")) %></li>
      <li><%= link_to("按薪资上限排序", jobs_path(:order => "by_wage_upper")) %></li>
      <li><%= link_to("按刊登时间排序", jobs_path ) %></li>
    </ul>
  </div>

  <div class="pull-right">
    <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
  </div>
  <thead>
    <tr>
      <th>职缺</th>
      <th>薪资下限</th>
      <th>薪资上限</th>
      <th>刊登时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
